<div>
  <%= link_to t('new_task'), 'tasks/new' %>
  <table>
  <% @tasks.each do |task| %>
    <div>
      <tr>
        <td><%= task.name %></td>
        <td><%= task.done %></td>
        <td><%= link_to 'update task', edit_task_path(id: task.id), method: :get%></td>
        <td><%= link_to 'delete task', delete_task_path(id: task.id), method: :delete %></td>
      </tr>
    </div>
  <% end %>
  </table>
</div>