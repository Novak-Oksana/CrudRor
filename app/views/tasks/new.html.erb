<%= form_for :task do |f| -%>
    <p>
      <%= f.label :language, "Language" %><br />
      <%= f.select :language, [['English', 'en'], ['Russian', 'ru']] %>
    </p>

    <%= f.text_field :name, placeholder: 'name' %>
    <%= f.text_field :description, placeholder: 'description' %>
    <%= f.text_field :importance, placeholder: 'importance' %>
    <%= f.date_select :expiry, order: [:day, :month, :year] %>
    <%= f.submit "save" %>
    <%= link_to'Back', '/' %>

<% end %>